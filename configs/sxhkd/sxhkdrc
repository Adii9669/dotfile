# Reload sxhkd
alt + r
    pkill -USR1 -x sxhkd; dunstify  " "" sxhkd Restarted" 

# Reload dunst (alt + d)
alt + d
    killall dunst; dunst &;dunstify "󰎟" "dunst Restarted"



# Increase volume
XF86AudioRaiseVolume
    .local/bin/notify_volume up
# Decrease volume
XF86AudioLowerVolume
    .local/bin/notify_volume down
# Mute/unmute
XF86AudioMute
    .local/bin/notify_volume mute  

#Brightness up
XF86MonBrightnessUp
    /home/milo/.local/bin/notify_brightness up
#Brightness Down
XF86MonBrightnessDown
    /home/milo/.local/bin/notify_brightness down



#application launcer 
alt + space
	rofi -show combi -modes combi -combi-modes "window,drun,run"


#PowerManagement
super + n 
      /home/milo/.local/bin/power_toggle



#better lock screen 
ctrl + Shift + tilda   
   betterlockscreen -l --dim   

#thunar 
super + v 
      clipmenu

#zen-browser
super + z 
      app.zen_browser.zen


#Take the ScreenShot
super + backslash
       flameshot gui
# 	flameshot gui -d 200; gimp ~/Pictures/Screenshot_$(date +%F_%T).png


#change wallpaper
alt + t 
   .local/bin/walli
